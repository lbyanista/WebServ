server {
    listen                  8080 0.0.0.0;
    server_name             server1;
    root                    www;
    index                   IndexListing.html;
    error_pages             404 /custom_404.html;
    client_max_body_size    1024;
    request_method          GET POST;
    autoindex               on;

    location /about {
        error_pages              404 /custom_404.html;
        index                   about.html;
        client_max_body_size    1024;
        request_method          GET POST;
    }

    location /upload {
        error_pages              404 /custom_404.html;
        client_max_body_size    1024;
        request_method          GET POST;
    }
}

server {
    listen                  8081 0.0.0.0;
    server_name             server2;
    root                    www;
    index                   index2.html;
    error_pages             404 /custom_404.html;
    client_max_body_size    100;
    request_method          GET POST;
    autoindex               on;
}